<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/main_layout_padding"
    android:paddingTop="@dimen/main_layout_padding">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/static_title_text_view"
            style="@style/BookTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_text_string"
            android:textSize="@dimen/title_text_view" />

        <TextView
            android:id="@+id/title_text_view"
            style="@style/BookTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_text_view"
            android:textSize="@dimen/title_text_view"
            tools:text="Title" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/layout_padding_top">

        <TextView
            android:id="@+id/static_author_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/author_text_string"
            android:textSize="@dimen/authors_text_view" />

        <TextView
            android:id="@+id/author_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_text_view"
            android:textSize="@dimen/authors_text_view"
            tools:text="Author" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/layout_padding_top">

        <TextView
            android:id="@+id/static_date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/year_text_string"
            android:textSize="@dimen/authors_text_view" />

        <TextView
            android:id="@+id/date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_text_view"
            android:textSize="@dimen/authors_text_view"
            tools:text="Published Year" />
    </LinearLayout>
</LinearLayout>